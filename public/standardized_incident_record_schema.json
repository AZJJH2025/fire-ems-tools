{
  "schemaVersion": "1.0",
  "schemaName": "FireEMS.ai Standardized Incident Record",
  "description": "A standardized schema for fire and EMS incident data",
  "requiredFields": [
    {
      "name": "incident_id",
      "type": "string",
      "description": "Unique identifier for the incident",
      "category": "incident"
    },
    {
      "name": "incident_date",
      "type": "date",
      "description": "Date of the incident (YYYY-MM-DD)",
      "category": "timestamp"
    },
    {
      "name": "incident_time",
      "type": "time",
      "description": "Time of the incident (HH:MM:SS)",
      "category": "timestamp"
    },
    {
      "name": "latitude",
      "type": "coordinates",
      "description": "Latitude coordinate of the incident location",
      "category": "location"
    },
    {
      "name": "longitude",
      "type": "coordinates",
      "description": "Longitude coordinate of the incident location",
      "category": "location"
    },
    {
      "name": "incident_type",
      "type": "string",
      "description": "Type or nature of the incident (e.g., Fire, EMS, Rescue)",
      "category": "incident"
    }
  ],
  "optionalFields": [
    {
      "name": "department_id",
      "type": "string",
      "description": "Identifier for the responding department",
      "category": "incident"
    },
    {
      "name": "dispatch_time",
      "type": "time",
      "description": "Time when units were dispatched",
      "category": "timestamp"
    },
    {
      "name": "enroute_time",
      "type": "time",
      "description": "Time when units began traveling to the incident",
      "category": "timestamp"
    },
    {
      "name": "arrival_time",
      "type": "time",
      "description": "Time when first unit arrived on scene",
      "category": "timestamp"
    },
    {
      "name": "clear_time",
      "type": "time",
      "description": "Time when units cleared the scene",
      "category": "timestamp"
    },
    {
      "name": "address",
      "type": "string",
      "description": "Street address of the incident",
      "category": "location"
    },
    {
      "name": "city",
      "type": "string",
      "description": "City where the incident occurred",
      "category": "location"
    },
    {
      "name": "state",
      "type": "string",
      "description": "State where the incident occurred",
      "category": "location"
    },
    {
      "name": "zip_code",
      "type": "string",
      "description": "ZIP/Postal code where the incident occurred",
      "category": "location"
    },
    {
      "name": "priority",
      "type": "string",
      "description": "Priority or urgency level of the incident",
      "category": "incident"
    },
    {
      "name": "units_responded",
      "type": "string",
      "description": "List of units that responded to the incident",
      "category": "incident"
    },
    {
      "name": "responding_station",
      "type": "string",
      "description": "Primary station that responded",
      "category": "incident"
    },
    {
      "name": "incident_commander",
      "type": "string",
      "description": "Name of the incident commander",
      "category": "incident"
    },
    {
      "name": "weather_conditions",
      "type": "string",
      "description": "Weather conditions at the time of the incident",
      "category": "other"
    },
    {
      "name": "property_use",
      "type": "string",
      "description": "Type of property where the incident occurred",
      "category": "nfirs"
    },
    {
      "name": "fdid",
      "type": "string",
      "description": "Fire Department Identifier (FDID)",
      "category": "nfirs"
    },
    {
      "name": "nfirs_incident_type",
      "type": "string",
      "description": "NFIRS incident type code",
      "category": "nfirs"
    },
    {
      "name": "casualties_civilian",
      "type": "number",
      "description": "Number of civilian casualties",
      "category": "nfirs"
    },
    {
      "name": "casualties_fire_service",
      "type": "number",
      "description": "Number of fire service casualties",
      "category": "nfirs"
    },
    {
      "name": "property_loss",
      "type": "number",
      "description": "Estimated property loss in dollars",
      "category": "nfirs"
    },
    {
      "name": "content_loss",
      "type": "number",
      "description": "Estimated content loss in dollars",
      "category": "nfirs"
    },
    {
      "name": "fire_spread",
      "type": "string",
      "description": "Extent of fire spread",
      "category": "nfirs"
    },
    {
      "name": "detector_presence",
      "type": "boolean",
      "description": "Whether a detector was present",
      "category": "nfirs"
    },
    {
      "name": "detector_operation",
      "type": "string",
      "description": "How the detector operated",
      "category": "nfirs"
    },
    {
      "name": "detector_effectiveness",
      "type": "string",
      "description": "Effectiveness of the detector",
      "category": "nfirs"
    },
    {
      "name": "detector_failure_reason",
      "type": "string",
      "description": "Reason for detector failure",
      "category": "nfirs"
    },
    {
      "name": "sprinkler_presence",
      "type": "boolean",
      "description": "Whether a sprinkler system was present",
      "category": "nfirs"
    },
    {
      "name": "sprinkler_operation",
      "type": "string",
      "description": "How the sprinkler system operated",
      "category": "nfirs"
    },
    {
      "name": "sprinkler_effectiveness",
      "type": "string",
      "description": "Effectiveness of the sprinkler system",
      "category": "nfirs"
    },
    {
      "name": "sprinkler_failure_reason",
      "type": "string",
      "description": "Reason for sprinkler system failure",
      "category": "nfirs"
    },
    {
      "name": "area_of_origin",
      "type": "string",
      "description": "Area of fire origin",
      "category": "nfirs"
    },
    {
      "name": "heat_source",
      "type": "string",
      "description": "Heat source that ignited the fire",
      "category": "nfirs"
    },
    {
      "name": "item_first_ignited",
      "type": "string",
      "description": "Item first ignited",
      "category": "nfirs"
    },
    {
      "name": "cause_of_ignition",
      "type": "string",
      "description": "Cause of ignition",
      "category": "nfirs"
    },
    {
      "name": "factor_contributing_to_ignition",
      "type": "string",
      "description": "Factors contributing to ignition",
      "category": "nfirs"
    },
    {
      "name": "human_factors_contributing",
      "type": "string",
      "description": "Human factors contributing to ignition",
      "category": "nfirs"
    },
    {
      "name": "structure_status",
      "type": "string",
      "description": "Status of the structure",
      "category": "nfirs"
    },
    {
      "name": "structure_type",
      "type": "string",
      "description": "Type of structure",
      "category": "nfirs"
    },
    {
      "name": "notes",
      "type": "string",
      "description": "Additional notes or information",
      "category": "other"
    },
    {
      "name": "emsn_provider_impression",
      "type": "string",
      "description": "Provider's impression of the patient's condition",
      "category": "other"
    },
    {
      "name": "patient_age",
      "type": "number",
      "description": "Patient's age",
      "category": "other"
    },
    {
      "name": "patient_gender",
      "type": "string",
      "description": "Patient's gender",
      "category": "other"
    },
    {
      "name": "procedures_performed",
      "type": "string",
      "description": "Procedures performed on the patient",
      "category": "other"
    },
    {
      "name": "medications_administered",
      "type": "string",
      "description": "Medications administered to the patient",
      "category": "other"
    },
    {
      "name": "response_disposition",
      "type": "string",
      "description": "Disposition of the response",
      "category": "other"
    },
    {
      "name": "transport_destination",
      "type": "string",
      "description": "Destination of patient transport",
      "category": "other"
    }
  ]
}